<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Formulaire{% endblock %}</title>

    {# Import Tailwind CSS #}
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-50">

<header>
    {% include 'parts/navbar.html.twig' %}
</header>

{% block body %}
    <div class="container mx-auto p-6">
        <h1 class="text-3xl font-semibold mb-6">{{ button_label|default('Create Category') }}</h1>

        <div class="bg-white p-6 rounded-lg shadow-lg">
            {{ form_start(form, { 'attr': { 'class': 'space-y-6' } }) }}

            {# Boucle pour chaque champ du formulaire #}
            {% for field in form %}
                <div class="flex flex-col">
                    {{ form_label(field, null, { 'label_attr': { 'class': 'font-medium text-gray-700 mb-2' } }) }}
                    {{ form_widget(field, { 'attr': { 'class': 'px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500' } }) }}
                    {{ form_errors(field) }}
                </div>
            {% endfor %}

            <button type="submit" class="w-full px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 shadow-md transition duration-300">
                {{ button_label|default('Save') }}
            </button>

            {{ form_end(form) }}
        </div>

        <div class="mt-4">
            <a href="{{ path('app_category_index') }}" class="inline-block px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 text-center mx-auto">
                Back to list
            </a>
        </div>
    </div>
{% endblock %}

</body>
</html>
