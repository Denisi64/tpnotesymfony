{% include 'parts/navbar.html.twig' %}
<!DOCTYPE html>
<html lang="fr">
<body class="font-montserrat text-sm bg-gray-100 dark:bg-gray-900">
<div class="flex items-center justify-center min-h-screen">
    <form action="{{ path('page_reset_password', {'token': token}) }}" method="POST">
        <h1 class="text-2xl font-bold text-center mb-6 text-gray-800 dark:text-gray-200">Réinitialisation du mot de passe</h1>
        <p class="text-center text-sm font-medium opacity-70 mb-6">Veuillez entrer un nouveau mot de passe.</p>

        {% for message in app.flashes('error') %}
            <div class="mb-4 p-4 text-sm text-red-600 bg-red-100 rounded dark:bg-red-700 dark:text-red-100">
                {{ message }}
            </div>
        {% endfor %}

        <div class="mb-4">
            <label for="password" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Nouveau mot de passe</label>
            <input type="password" id="password" name="password" class="mt-1 block w-full px-4 py-2 text-gray-900 bg-gray-50 border border-gray-300 rounded-lg dark:bg-gray-700 dark:text-white dark:border-gray-600 focus:ring-blue-500 focus:border-blue-500" placeholder="Nouveau mot de passe" required />
        </div>

        <div class="mb-4">
            <label for="confirm_password" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Confirmer le mot de passe</label>
            <input type="password" id="confirm_password" name="confirm_password" class="mt-1 block w-full px-4 py-2 text-gray-900 bg-gray-50 border border-gray-300 rounded-lg dark:bg-gray-700 dark:text-white dark:border-gray-600 focus:ring-blue-500 focus:border-blue-500" placeholder="Confirmer le mot de passe" required />
        </div>

        <div class="mb-6">
            <button type="submit" class="w-full px-4 py-2 text-white bg-blue-600 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-blue-500 dark:hover:bg-blue-600">
                Réinitialiser le mot de passe
            </button>
        </div>

        <div class="mt-4 text-center">
            <a href="{{ path('app_login') }}" class="text-blue-500 hover:underline dark:text-blue-400">Retour à la connexion</a>
        </div>
    </form>
</div>
</body>
</html>
